<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head') -%>
  </head>

  <body>
    <%- include('../partials/header') -%>
    <main>
      <div class="navbar-products">
        <div>
          <a href="/products"><button>List Products</button></a>
        </div>
      </div>
      <div>
        <form
          action="/products/store"
          method="post"
          enctype="multipart/form-data"
        >
          <div><input type="text" name="name" /></div>
          <div><input type="text" name="description" /></div>
          <div><input type="file" name="image" /></div>
          <div><input type="text" name="category" /></div>
          <div>
            <label for="rating">Rating:</label>
            <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <div><input type="text" name="platform" /></div>
          <div><input type="text" name="price" /></div>

          <div><input type="submit" value="Create" /></div>
          <div><input type="reset" value="Reset" /></div>
        </form>
      </div>
    </main>
    <%- include('../partials/footer') -%>
  </body>
</html>
